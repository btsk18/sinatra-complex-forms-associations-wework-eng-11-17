<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

  <input type="checkbox" name="pet[owner_id]" id="<%= @pet.owner.id%>" value="<%=pet.id%>" <%='checked' if @owner.pets.include?(pet) %>><%=@pet.owner.name%></input>

</form>
