<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

  <input type="checkbox" name="owner[name]" id="<%= @pet.owner.id%>" value="<%=@pet.owner.id%>" <%='checked' %>><%=@pet.owner.name%></input>

  <input type="submit" value="Update Pet">
</form>
